@model CarPartsPatron.Models.ViewModels.PartCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add a Part</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Part.Car" class="control-label"></label>
                <select asp-for="Part.CarId" class="form-control">
                    @foreach (var car in Model.CarOptions)
                    {
                        <option value="@car.Id">@car.Model</option>
                    }
                </select>
                <span asp-validation-for="Part.CarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Part.Brand" class="control-label"></label>
                <input asp-for="Part.Brand" class="form-control" />
                <span asp-validation-for="Part.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Part.PartType" class="control-label"></label>
                <input asp-for="Part.PartType" class="form-control" />
                <span asp-validation-for="Part.PartType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Part.Price" class="control-label"></label>
                <input asp-for="Part.Price" class="form-control" />
                <span asp-validation-for="Part.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Part.PhotoUrl" class="control-label"></label>
                <input asp-for="Part.PhotoUrl" class="form-control" />
                <span asp-validation-for="Part.PhotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Part.DateInstalled" class="control-label"></label>
                <input asp-for="Part.DateInstalled" class="form-control" />
                <span asp-validation-for="Part.DateInstalled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
